<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_background"
    tools:context=".user.User">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:layout_marginTop="@dimen/btn_margin"
        android:textColor="@color/colorWhite"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@+id/qrPlaceHolder"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/qrPlaceHolder"
        android:layout_width="320dp"
        android:layout_height="340dp"
        android:layout_marginTop="@dimen/btn_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:srcCompat="@android:drawable/screen_background_dark_transparent" />

    <Button
        android:id="@+id/btn_add_home"
        android:layout_width="@dimen/btn_size"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/btn_margin"
        android:background="@drawable/bg_button_white"
        android:text="Add/Modify Home"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qrPlaceHolder"/>

    <Button
        android:id="@+id/btn_modify"
        android:layout_width="@dimen/btn_size"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/btn_margin"
        android:background="@drawable/bg_button_white"
        android:text="Modify Profile"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_home"/>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="@dimen/btn_size"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/btn_margin"
        android:background="@drawable/bg_button_white"
        android:text="Logout"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_modify"/>


</androidx.constraintlayout.widget.ConstraintLayout>